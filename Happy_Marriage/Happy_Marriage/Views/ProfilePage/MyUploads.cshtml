@model UploaderModel
@{
    string msg = ViewData["msg"] as string;
}
<div class="row">
    <div class="text-center">
        <form method="post" enctype="multipart/form-data" action="/ProfilePage/MyUploads">
            <h2>Upload From Here</h2>
            <label class="form-label" asp-for="File">Default file input example</label>
            <input asp-for="File" class="form-control" id="file" name="file"/>
            <span asp-validation-for="File" class="text-danger"></span>

            <button type="submit" class="btn btn-dark btn-lg btn-block mt-3 bg-gradient" id="btn" name="btn">Upload</button>
        </form>
        @if (msg != null)
        {
            <span>@msg</span>
            
        }
    </div>
</div>
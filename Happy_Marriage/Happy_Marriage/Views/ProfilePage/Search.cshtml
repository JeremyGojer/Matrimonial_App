@using Happy_Marriage.Models

<h3>Search</h3>
<form method="post" action="/ProfilePage/Search" class="form-control">
    <div class="row">
        
        <div class="col">
            <label for="minage">Select minimum age</label>
            <select class="form-control" id="minage" name="minage">
                <option value=18 selected>18</option>
                @for(int i = 19; i <= 100; i++)
                {
                    <option value=@i>@i</option>    
                }
            </select>
        </div>

        <div class="col">
            <label for="maxage">Select maximum age</label>
            <select class="form-control" id="maxage" name="maxage">
                @for (int i = 18; i < 100; i++)
                {
                        <option value=@i>@i</option>    
                }
                <option value=100 selected>100</option>
            </select>
        </div>

        <div class="col">
            <label for="gender">Select Gender</label>
            <select class="form-control" id="gender" name="gender">
                <option value="Male">Male</option>
                <option value="Female">Female</option>
            </select>
        </div>

    </div>

    <div class="row">

        <div class="col">
            <label for="education">Select Education</label>
            <select id="education" name="education" class="form-control">
                <option value="Non Matric">Not Educated</option>
                <option value="Matric">Matric</option>
                <option value="Undergraduate">Undergraduate</option>
                <option value="Graduate">Graduate</option>
                <option value="Post-Graduate or Higher">Post-Graduate or Higher</option>
            </select>
        </div>

        <div class="col">
            <label for="city">Enter Region</label>
            <input type="text" class="form-control" id="city" name="city" />
        </div>

        <div class="col">
            <button class="btn btn-dark btn-lg btn-block mt-3 bg-gradient" type="submit" id="btn" name="btn">Search</button>
        </div>

    </div>
</form>



@using System.Text.Json
@using Happy_Marriage.Models
@{
    User user = null;
    string jsonuser = Context.Session.GetString("user");
    if (jsonuser != null)
    {
        user = JsonSerializer.Deserialize<User>(jsonuser);
    }

}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Happy_Marriage</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Happy_Marriage.styles.css" asp-append-version="true" />
    @*My Additions*@
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Roboto:300,300i,400,400i,500,500i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">
    <link rel="stylesheet" href="~/css/animate.css/animate.min.css">
    <link rel="stylesheet" href="~/lib/bootstrap-icons/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/lib/boxicons/css/boxicons.min.css" />
    <link rel="stylesheet" href="~/lib/glightbox/css/glightbox.min.css" />
    <link rel="stylesheet" href="~/lib/swiper/swiper-bundle.min.css" />
    <link rel="stylesheet" href="~/css/Home.css"/>
    <link rel="stylesheet" href="~/css/Messenger.css" />
    <link rel="stylesheet" href="~/css/SASS.css" asp-append-version="true" />
    
    
</head>
@*NAV BAR DEFAULT BY THEME*@
<body>
    @if (user != null)
    {
    
        <div>
            <header>
                <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark box-shadow">
                    <div class="container-fluid">
                        <a class="navbar-brand" asp-area="" asp-controller="ProfilePage" asp-action="Index">Happy_Marriage</a>
                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                            <ul class="navbar-nav flex-grow-1">
                                @*<li class="nav-item">
                                    <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                                </li>*@
                            </ul>
                            <ul class="navbar-nav flex-grow">

                                //Get the user from session

                                @if (user == null)
                                {
                                    <li class="nav-item">
                                        <a class="nav-link text-white" asp-area="Identity" asp-controller="Auth" asp-action="Login">Login</a>
                                    </li>
                                }
                                else
                                {
                                    <li class="nav-item">
                                        <a class="nav-link text-white" asp-area="Identity" asp-controller="ProfilePage" asp-action="MyProfile">@user.UserName</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-white" asp-area="Identity" asp-controller="Auth" asp-action="LogOut">Log Out</a>
                                    </li>
                                }

                            </ul>
                        </div>
                    </div>
                </nav>
                
            </header>
        </div>
        
    }

    <div>
        <main role="main">
            @RenderBody()
        </main>
    </div>
            

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
@using System.Text.Json
@model User
@{
    User user = null;
    string jsonuser = Context.Session.GetString("user");
    if (jsonuser != null)
    {
        user = JsonSerializer.Deserialize<User>(jsonuser);
    }

}

    <nav id="sidebar">
        <div class="sidebar-header">
            @*<h3>Sidebar Header</h3>*@
            <div class="text-center">
                <img src=@user.ImageUrl style="border-radius:50%" width="150" />
                <h3><a class="nav-link text-white" asp-area="Identity" asp-controller="ProfilePage" asp-action="MyProfile">@user.UserName</a></h3>
            </div>
        </div>
        <ul class="list-unstyled components">
            @*<p>Sub Heading</p>*@
            <li class="nav-item">
                <a class="nav-link text-white" asp-controller="Messenger" asp-action="MyMessenger">
                    <svg class="bi bi-envelope" width="16" height="16"><use xlink:href="#messages"></use></svg>
                    Messenger
                </a>
            </li>
            <li>
                <a class="nav-link text-white" asp-controller="ProfilePage" asp-action="MyRequests">
                    <svg class="bi me-2" width="16" height="16"><use xlink:href="#speedometer2"></use></svg>
                    Requests
                </a>
            </li>
            <li>
                <a class="nav-link text-white" asp-controller="ProfilePage" asp-action="SearchMenu">
                    <svg class="bi me-2" width="16" height="16"><use xlink:href="#speedometer2"></use></svg>
                    Search
                </a>
            </li>
            <li>
                <a class="nav-link text-white" asp-controller="ProfilePage" asp-action="MyConnections">
                    <svg class="bi me-2" width="16" height="16"><use xlink:href="#grid"></use></svg>
                    Your Connections
                </a>
            </li>
            <li>
                <a class="nav-link text-white" asp-controller="ProfilePage" asp-action="MyUploads">
                    <svg class="bi me-2" width="16" height="16"><use xlink:href="#people-circle"></use></svg>
                    Uploads
                </a>
            </li>
            
        </ul>
        <hr>
        <div class="dropdown">
            <a href="#" class="d-flex align-items-center text-white text-decoration-none dropdown-toggle" id="dropdownUser1" data-bs-toggle="dropdown" aria-expanded="false">
                <strong>Extras</strong>
            </a>
            <ul class="dropdown-menu dropdown-menu-dark text-small shadow" aria-labelledby="dropdownUser1">
                <li><a class="dropdown-item" href="#">Settings</a></li>
                <li><a class="dropdown-item" href="/Auth/ChangePassword">Change Password</a></li>
                <li><hr class="dropdown-divider"></li>
                <li><a class="dropdown-item" href="/Auth/LogOut">Sign out</a></li>
            </ul>
        </div>

    </nav>


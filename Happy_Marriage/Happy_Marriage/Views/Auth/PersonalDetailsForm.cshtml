@model User_Personal_Info
@{
    string msg = ViewData["msg"].ToString();
}
<div class="personal-details-form">
    <form>
        <label for="height">Height:</label>
        <input asp-for="Height" class="form-control" type="number" id="height" name="height" />

        <label for="weight">Weight:</label>
        <input asp-for=Weight class="form-control" type="number" id="weight" name="weight" />

        <label for="foodtype">Food Type:</label>
        <select asp-for="FoodType" class="form-control" id="foodtype" name="foodtype">
            <option value="Pure-Vegeterian">Pure-Vegeterian</option>
            <option value="Vegan">Vegan</option>
            <option value="Non-Vegeterian">Non-Vegeterian</option>
            <option value="All">All</option>
        </select>

        <label for="smoking">Smoking:</label>
        <select asp-for="Smoking" class="form-control" id="smoking" name="smoking">
            <option value="Regular">Regular</option>
            <option value="Occasionally">Occasionally</option>
            <option value="Never">Never</option>
        </select>

        <label for="alcohol">Alcohol:</label>
        <select asp-for="Alcohol" class="form-control" id="alcohol" name="alcohol">
            <option value="Regular">Regular</option>
            <option value="Occasionally">Occasionally</option>
            <option value="Never">Never</option>
        </select>

        <label for="bloodgroup">Blood Group:</label>
        <select asp-for="BloodGroup" class="form-control" id="bloodgroup" name="bloodgroup">
            <option value="A +ve">A +ve</option>
            <option value="A -ve">A -ve</option>
            <option value="B +ve">B +ve</option>
            <option value="B -ve">B -ve</option>
            <option value="AB +ve">AB +ve</option>
            <option value="AB -ve">AB -ve</option>
            <option value="O +ve">O +ve</option>
            <option value="O -ve">O -ve</option>
        </select>

        <label for="martialstatus">Martial Status:</label>
        <select asp-for="MartialStatus" class="form-control" id="martialstatus" name="martialstatus">
            <option value="Single">Single</option>
            <option value="Married">Married</option>
            <option value="Divorced">Divorced</option>
        </select>

        <label for="annualincome">Annual Income:</label>
        <input asp-for="AnnualIncome" class="form-control" type="number" id="annualincome" name="annualincome" />
        @if(msg != null)
        {
            <div>
                @msg
            </div>
        }

        <button class="btn btn-dark btn-lg btn-block" id="btn" name="btn" formmethod="post" formaction="/Auth/PersonalDetailsForm/">Submit</button>
    
    </form>
</div>